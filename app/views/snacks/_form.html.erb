<%= form_with(model: snack) do |form| %>
<% if snack.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(snack.errors.count, "error") %> prohibited this snack from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% snack.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :snack_name, class: label_class %>
          <%= form.text_field :snack_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.text_field :price, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if snack.persisted? %>
<%= link_to "Cancel", snack, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", snacks_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
