<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Booking</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to bookings_path, class: button_class(theme: "transparent") do %>
      All Bookings
      <% end %>
      <%= link_to edit_booking_path(@booking), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Customer:</p>
        <p><%= @booking.customer %></p>
      </li>
      <li>
        <p class="font-semibold">Show:</p>
        <p><%= @booking.show %></p>
      </li>
      <li>
        <p class="font-semibold">Seat:</p>
        <p><%= @booking.seat %></p>
      </li>
      <li>
        <p class="font-semibold">Booking date:</p>
        <p><%= @booking.booking_date %></p>
      </li>
  </ul>
</div>
