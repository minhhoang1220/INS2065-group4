<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Feedback</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to feedbacks_path, class: button_class(theme: "transparent") do %>
      All Feedbacks
      <% end %>
      <%= link_to edit_feedback_path(@feedback), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Customer:</p>
        <p><%= @feedback.customer %></p>
      </li>
      <li>
        <p class="font-semibold">Date:</p>
        <p><%= @feedback.date %></p>
      </li>
      <li>
        <p class="font-semibold">Message:</p>
        <p><%= @feedback.message %></p>
      </li>
  </ul>
</div>
