<%= form_with(model: movie_show) do |form| %>
<% if movie_show.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(movie_show.errors.count, "error") %> prohibited this movie_show from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% movie_show.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :movie_id, class: label_class %>
          <%= form.text_field :movie_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :theatre_id, class: label_class %>
          <%= form.text_field :theatre_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :date, class: label_class %>
          <%= form.date_field :date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.text_field :price, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if movie_show.persisted? %>
<%= link_to "Cancel", movie_show, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", movie_shows_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
