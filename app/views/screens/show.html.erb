<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Screen</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to screens_path, class: button_class(theme: "transparent") do %>
      All Screens
      <% end %>
      <%= link_to edit_screen_path(@screen), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Theatre:</p>
        <p><%= @screen.theatre %></p>
      </li>
      <li>
        <p class="font-semibold">Screen name:</p>
        <p><%= @screen.screen_name %></p>
      </li>
      <li>
        <p class="font-semibold">Seat capacity:</p>
        <p><%= @screen.seat_capacity %></p>
      </li>
  </ul>
</div>
