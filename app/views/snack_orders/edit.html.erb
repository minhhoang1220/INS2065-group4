<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit snack_order</h1>
    <% if @snack_order.persisted? %>
    <%= button_to 'Destroy', @snack_order, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', snack_order: @snack_order %>
</div>
