<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Theatre</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to theatres_path, class: button_class(theme: "transparent") do %>
      All Theatres
      <% end %>
      <%= link_to edit_theatre_path(@theatre), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Theatre name:</p>
        <p><%= @theatre.theatre_name %></p>
      </li>
      <li>
        <p class="font-semibold">Location:</p>
        <p><%= @theatre.location %></p>
      </li>
  </ul>
</div>
